<div class="row">
  <div class="col-12 px-5 pb-3">
    <h1>Lend my powers</h1>
  </div>
</div>

<div class="row justify-content-center">
  <div class="col-6">
    <div class="card p-5 rounded shadow">
      <%= simple_form_for(@service) do |f| %>
        <%= f.input :superhero_name %>
        <%= f.input :photo, as: :file %>
        <%= f.input :race, collection: ['Human', 'Demigod', 'Mutant', 'Cyborg', 'Android', 'Elemental', 'Mythical', 'Alien', 'Other']  %>
        <%= f.input :team, collection: ['Independent', 'Avengers', 'Justice League', 'Galactic Guardians', 'Earth Defenders', 'Mystic Alliance', 'Urban Protectors', 'Secret Society', 'Time Keepers', 'Dimensional Watch', 'Peace Enforcers', 'Shadow Operatives', 'Other']  %>
        <%= f.input :powers %>
        <%= f.input :bio %>
        <%= f.input :fee %>
        <%= f.submit "Save", class: "form-button" %>
      <% end %>
    </div>
  </div>
</div>
