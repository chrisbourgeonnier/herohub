<div class="container">
  <h1>My dashboard</h1>
  <div class="container lists-container">
    <div class="d-flex flex-row justify-content-md-between">
      <div class="p-2">
        <div class="d-flex">
        <div class="card mb-6 rounded shadow overflow-auto" style="width: 36rem; height: 260px">
          <div class="card-body">
            <h5 class="card-header">Coming bookings</h5>
            <ul class="list-group list-group-flush">
              <% @bookings.each do |booking| %>
                <% if booking.date >= Date.today %>
                <li class="list-group-item"><%= Service.find(booking.service_id).superhero_name %> - <%= booking.date %> - <%= booking.comments %></li>
                <% end %>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
      <br><br>
      <div class="d-flex mt-3">
        <div class="card mb-6 rounded shadow overflow-auto" style="width: 36rem; height: 260px">
          <div class="card-body">
            <h5 class="card-header">Previous bookings</h5>
            <ul class="list-group list-group-flush">
              <% @bookings.each do |booking| %>
                <% if booking.date < Date.today %>
                  <li class="list-group-item"><%= Service.find(booking.service_id).superhero_name %> - <%= booking.date %> - <%= booking.comments %></li>
                <% end %>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
      </div>

      <div class="p-2">
        <div class="card mb-6 rounded shadow overflow-auto" style="width: 36rem; height: 585px">
          <div class="card-body">
            <h5 class="card-header">Pending bookings</h5>
              <% @bookings.each do |booking| %>
                <% if booking.status == 0 %>
                <div class="card-body">
                <p><%= Service.find(booking.service_id).superhero_name %> - <%= booking.date %></p>
                <p><%= booking.comments %></p>
                <a class="btn btn-outline-primary btn-sm" href="#" role="button">Modify</a>
                <a class="btn btn-outline-danger btn-sm" href="#" role="button">Cancel</a>
                <p></p>
                </div>
                <% end %>
              <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
