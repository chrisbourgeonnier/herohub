<div class="row">
  <div class="col-12 px-5 pb-3">
    <h1>Book a day with <%= @service.superhero_name %></h1>
  </div>
</div>

<div class="row justify-content-center">
  <div class="col-6">
    <div class="card p-5 rounded shadow">
      <%= simple_form_for([@service, @booking]) do |f| %>
        <%= f.input :date %>
        <%= f.input :location %>
        <%= f.input :comments, input_html: { class: "form-input" } %>
        <%= f.submit "Send request", class: "form-button" %>
      <% end %>
    </div>
  </div>
</div>
